@namespace Orchestra.Web.Components.AgentTerminal
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div class="agent-terminal-container">
    <!-- Terminal Header -->
    <div class="terminal-header">
        <div class="terminal-info">
            <span class="agent-label">Agent:</span>
            <span class="agent-id">@AgentId</span>
            <span class="connection-status @GetStatusClass()">
                <i class="bi @GetStatusIcon()"></i>
                @ConnectionStatus
            </span>
        </div>
        <div class="terminal-actions">
            <button class="btn btn-sm btn-outline-secondary"
                    @onclick="CopyAllOutput"
                    disabled="@(!OutputLines.Any())">
                <i class="bi bi-clipboard"></i> Copy
            </button>
            <button class="btn btn-sm btn-outline-secondary"
                    @onclick="ClearOutput"
                    disabled="@(!IsConnected)">
                <i class="bi bi-trash"></i> Clear
            </button>
            <button class="btn btn-sm btn-outline-secondary"
                    @onclick="ToggleAutoScroll">
                <i class="bi @(AutoScroll ? "bi-arrow-down-square-fill" : "bi-arrow-down-square")"></i>
                Auto-scroll
            </button>
            <button class="btn btn-sm btn-danger"
                    @onclick="DisconnectAsync"
                    disabled="@(!IsConnected)">
                <i class="bi bi-x-circle"></i> Disconnect
            </button>
        </div>
    </div>

    <!-- Terminal Output -->
    <div class="terminal-output"
         @ref="_outputElement"
         role="log"
         aria-label="Terminal output"
         aria-live="polite"
         tabindex="0">
        @if (!OutputLines.Any())
        {
            <div class="terminal-welcome">
                <p class="mb-3">Terminal ready</p>
                <button class="btn btn-primary" @onclick="@(() => ShowConnectionDialog = true)">
                    <i class="bi bi-plug-fill me-1"></i>
                    Connect to Agent
                </button>
            </div>
        }
        else
        {
            @foreach (var line in OutputLines)
            {
                <div class="terminal-line @GetLineClass(line)">
                    <span class="line-timestamp">[@line.Timestamp:HH:mm:ss]</span>
                    <span class="line-content">@line.Content</span>
                </div>
            }
        }

        @if (_isConnecting)
        {
            <div class="spinner-overlay">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Connecting...</span>
                </div>
            </div>
        }
    </div>

    <!-- Terminal Input -->
    <div class="terminal-input-container">
        <div class="input-group">
            <span class="input-prompt">$</span>
            <input type="text"
                   class="terminal-input"
                   @bind="_commandInput"
                   @bind:event="oninput"
                   @onkeydown="HandleKeyDown"
                   disabled="@(!IsConnected)"
                   placeholder="@(IsConnected ? "Enter command..." : "Not connected")" />
            <button class="btn btn-primary"
                    @onclick="SendCommandAsync"
                    disabled="@(!IsConnected || string.IsNullOrWhiteSpace(_commandInput))">
                <i class="bi bi-send"></i> Send
            </button>
        </div>
    </div>

    <!-- Connection Dialog -->
    @if (ShowConnectionDialog)
    {
        <div class="connection-dialog-overlay">
            <div class="connection-dialog">
                <h5>Connect to Agent</h5>
                <div class="form-group mb-3">
                    <label class="form-label">
                        Agent ID:
                        <i class="bi bi-info-circle-fill text-info ms-1"
                           data-bs-toggle="tooltip"
                           data-bs-placement="top"
                           title="Session ID из файлов .jsonl в папке C:\Users\[username]\.claude\projects\[project-name]\"></i>
                    </label>
                    <input type="text"
                           class="form-control"
                           @bind="_connectAgentId"
                           @bind:event="oninput"
                           placeholder="Например: abc123def456 (из .claude/projects/)" />
                    <small class="form-text text-muted">
                        @if (!string.IsNullOrEmpty(_connectAgentId))
                        {
                            <span class="text-success">✓ Agent ID подставлен автоматически из выбранного агента</span>
                        }
                        else
                        {
                            <span>Найдите Session ID в файлах .jsonl в вашей папке .claude/projects/</span>
                        }
                    </small>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Connector Type:</label>
                    <select class="form-control" @bind="_connectType">
                        <option value="terminal">Terminal (Claude Code)</option>
                        <option value="tab">Tab-based (Cursor)</option>
                    </select>
                </div>

                <!-- Advanced Options Section -->
                <div class="form-group mb-3">
                    <button type="button"
                            class="btn btn-link p-0 text-decoration-none"
                            @onclick="@(() => _showAdvancedOptions = !_showAdvancedOptions)">
                        <i class="bi @(_showAdvancedOptions ? "bi-chevron-down" : "bi-chevron-right")"></i>
                        Advanced Options (Manual Connection)
                    </button>

                    @if (_showAdvancedOptions)
                    {
                        <div class="mt-3 p-3 border rounded bg-light">
                            <p class="text-muted small mb-3">
                                <i class="bi bi-info-circle me-1"></i>
                                Fill in these fields to bypass auto-discovery and connect manually. Leave empty to use automatic discovery.
                            </p>

                            <div class="mb-3">
                                <label class="form-label">Process ID:</label>
                                <input type="text"
                                       class="form-control"
                                       @bind="_manualProcessId"
                                       @bind:event="oninput"
                                       placeholder="e.g., 12345" />
                                <small class="form-text text-muted">Windows Process ID of Claude Code process</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Pipe Name:</label>
                                <input type="text"
                                       class="form-control"
                                       @bind="_manualPipeName"
                                       @bind:event="oninput"
                                       placeholder="e.g., claude_12345" />
                                <small class="form-text text-muted">Named pipe (Windows only, without \\.\pipe\ prefix)</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Socket Path:</label>
                                <input type="text"
                                       class="form-control"
                                       @bind="_manualSocketPath"
                                       @bind:event="oninput"
                                       placeholder="e.g., /tmp/claude_12345.sock" />
                                <small class="form-text text-muted">Unix socket path (Linux/Mac only)</small>
                            </div>
                        </div>
                    }
                </div>

                <div class="dialog-actions">
                    <button class="btn btn-primary" @onclick="ConnectAsync">Connect</button>
                    <button class="btn btn-secondary" @onclick="CloseConnectionDialog">Cancel</button>
                </div>
            </div>
        </div>
    }
</div>
